<article class="mx-3 my-3">
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea class="textarea" name="post-content" type="text" value="{{post.post_content}}">{{post.post_content}}</textarea>
    </div>
    <div>
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="button" type="submit">Save post</button>
    <button class="button" type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form mx-3 my-3">
  <div>
    <textarea class="textarea" name="comment-body"></textarea>
  </div>

  <div>
    <button class="button" type="submit">Add comment</button>
  </div>
  
</form>

<div><a class="button mx-3 my-3" href="/dashboard"> &larr; Back to dashboard</a></div>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>